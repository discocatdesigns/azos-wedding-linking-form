        // Navigate to next image in carousel
        function nextImage() {
            const images = document.querySelectorAll('.carousel-image');
            images[currentCarouselIndex].classList.remove('active');
            
            currentCarouselIndex = (currentCarouselIndex + 1) % images.length;
            images[currentCarouselIndex].classList.add('active');
            
            // Reset the interval
            clearInterval(carouselInterval);
            carouselInterval = setInterval(() => {
                nextImage();
            }, 5000);
        }
        
        // Navigate to previous image in carousel
        function prevImage() {
            const images = document.querySelectorAll('.carousel-image');
            images[currentCarouselIndex].classList.remove('active');
            
            currentCarouselIndex = (currentCarouselIndex - 1 + images.length) % images.length;
            images[currentCarouselIndex].classList.add('active');
            
            // Reset the interval
            clearInterval(carouselInterval);
            carouselInterval = setInterval(() => {
                nextImage();
            }, 5000);
        }
        
        // Shuffle array function
        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }
        
        // Update countdown to wedding date
        function updateCountdown() {
            // Set your wedding date here (format: YYYY-MM-DD)
            const weddingDate = new Date('2026-08-15');
            const today = new Date();
            
            // Calculate difference in days
            const diffTime = weddingDate - today;
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            
            // Update countdown text
            const countdownEl = document.getElementById('countdown');
            if (diffDays > 0) {
                countdownEl.textContent = `${diffDays} days to go`;
            } else if (diffDays === 0) {
                countdownEl.textContent = "It's our wedding day!";
            } else {
                countdownEl.textContent = "We're married! Thank you for celebrating with us!";
            }
        }
        
        // Create and animate flowers
        function createFlowers() {
            const flowerContainer = document.querySelector('.flower-container');
            const numFlowers = 70; // Number of flowers to create
            
            for (let i = 0; i < numFlowers; i++) {
                const flower = document.createElement('img');
                const randomImg = flowerImages[Math.floor(Math.random() * flowerImages.length)];
                flower.src = randomImg;
                flower.classList.add('flower');
                
                // Random size between 96px and 220px
                const size = Math.floor(Math.random() * 124) + 96;
                flower.style.width = `${size}px`;
                
                // Start from center
                const startX = window.innerWidth / 2;
                const startY = window.innerHeight / 2;
                
                // Random final position (some off-screen)
                const angle = Math.random() * Math.PI * 2;
                const distance = Math.random() * Math.max(window.innerWidth, window.innerHeight) * 0.8;
                const endX = startX + Math.cos(angle) * distance;
                const endY = startY + Math.sin(angle) * distance;
                
                // Random rotation
                const rotation = (Math.random() * 60) - 30;
                
                // Random delay and duration
                const delay = Math.random() * 500;
                const duration = 2 + (Math.random() * 1.5);
                
                // Set initial position and style
                flower.style.left = `${startX}px`;
                flower.style.top = `${startY}px`;
                flower.style.transform = `translate(-50%, -50%) rotate(0deg)`;
                flower.style.opacity = '0';
                
                flowerContainer.appendChild(flower);
                
                // Animate the flower
                setTimeout(() => {
                    flower.style.transition = `all ${duration}s ease-out`;
                    flower.style.opacity = '0.8';
                    flower.style.left = `${endX}px`;
                    flower.style.top = `${endY}px`;
                    flower.style.transform = `translate(-50%, -50%) rotate(${rotation}deg)`;
                    
                    // Add bobbing animation after flower reaches final position
                    setTimeout(() => {
                        flower.style.transition = `transform 3s ease-in-out infinite`;
                        flower.style.transform = `translate(-50%, -50%) rotate(${rotation}deg) translateY(5px)`;
                        
                        // Create the bobbing effect
